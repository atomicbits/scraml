{
  "$schema": "http://json-schema.org/draft-03/schema",
  "id": "http://wegenenverkeer.be/po/schema/link.json",
  "type": "object",
  "description": "Een href encapsulatie",
  "properties": {
    "href": {
      "type": "string",
      "required": true
    },
    "method": {
      "type": "string",
      "required": true,
      "enum": [ "GET", "PUT", "POST", "DELETE", "HEAD", "CONNECT", "TRACE", "OPTIONS" ]
    },
    "accept": {
      "type": "string",
      "required": false
    }
  }
}
