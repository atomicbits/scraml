#%RAML 1.0
---
title: zoo-api
version: 1.0
mediaType: application/json

types:
  Animal:
    type: object
    properties:
      kind: string
      gender: string
  Zoo:
    type: object
    properties:
      name: string
      animals:
        type: Animal[]

resourceTypes:
  animalcollection:
    get:
      responses:
        200:
          body:
            application/json:
              type: Animal[]

/zoo/animals:
  type: animalcollection

/animals:
  type:
    animalcollection:
